<%= form_with(model: [:admin, article],data: {controller: "hello", "hello-target": "form"}, html: { class: "max-w-lg mx-auto p-6 bg-white rounded-lg shadow-md" }) do |form| %>
  <% if article.errors.any? %>
    <div class="mb-4 p-4 bg-red-100 border border-red-400 text-red-700 rounded">
      <h2 class="font-semibold mb-2">
        <%= pluralize(article.errors.count, "error") %> prohibited this article from being saved:
      </h2>
      <ul class="list-disc list-inside space-y-1">
        <% article.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="mb-4">
    <%= form.label :title, class: "block text-gray-700 font-semibold mb-1", data: { } %>
    <%= form.text_field :title, class: "w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-sky-500" %>
  </div>
  <div class="mb-4">
    <%= form.label :description, class: "block text-gray-700 font-semibold mb-1" %>
    <%= form.text_area :description, rows: 5, class: "w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-sky-500" %>
  </div>
  <div class="mb-6">
    <%= form.label :cover_image, class: "block text-gray-700 font-semibold mb-1" %>
    <%= form.file_field :cover_image, class: "w-full" %>
  </div>
  <div class="flex space-x-4">
    <%= form.submit "Save as Draft", name: "commit_save_draft",
          class: "bg-gray-400 hover:bg-gray-500 text-white font-semibold py-2 px-4 rounded transition-colors duration-300" %>
    <%= form.submit "Submit for Review", name: "commit_submit_review",
          class: "bg-sky-600 hover:bg-sky-700 text-white font-semibold py-2 px-4 rounded transition-colors duration-300"%>
  </div>
<% end %>
