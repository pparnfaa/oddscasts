<%= form_with(model: [:admin, article],
              data: { controller: "hello", "hello-target": "form" },
              html: { class: "space-y-6 bg-white/70 backdrop-blur-md border border-gray-200 rounded-xl shadow-lg p-8 max-w-2xl mx-auto" }) do |form| %>
  <% if article.errors.any? %>
    <div class="p-4 bg-red-50 border border-red-300 text-red-700 rounded-lg">
      <h2 class="font-semibold mb-2">
        <%= pluralize(article.errors.count, "error") %> prohibited this article from being saved:
      </h2>
      <ul class="list-disc list-inside space-y-1">
        <% article.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div>
    <%= form.label :title, class: "block text-sm font-semibold text-gray-800 mb-1" %>
    <%= form.text_field :title,
        class: "block w-full rounded-lg border border-gray-300 bg-white/80 focus:bg-white px-4 py-2 focus:ring-2 focus:ring-sky-500 focus:border-sky-500 transition" %>
  </div>
  <div>
    <%= form.label :description, class: "block text-sm font-semibold text-gray-800 mb-1" %>
    <%= form.text_area :description, rows: 5,
        class: "block w-full rounded-lg border border-gray-300 bg-white/80 focus:bg-white px-4 py-2 focus:ring-2 focus:ring-sky-500 focus:border-sky-500 transition" %>
  </div>
  <div>
    <%= form.label :cover_image, class: "block text-sm font-semibold text-gray-800 mb-1" %>
    <%= form.file_field :cover_image, class: "block w-full text-gray-700 border border-gray-300 rounded-lg cursor-pointer bg-white/80 focus:outline-none" %>
  </div>
  <div class="flex gap-4">
    <%= form.submit "ðŸ’¾ Save as Draft", name: "commit_save_draft",
        class: "flex-1 bg-gray-400 hover:bg-gray-500 text-white font-semibold py-2 px-4 rounded-lg shadow-md hover:shadow-lg transition" %>
    <%= form.submit "ðŸš€ Submit for Review", name: "commit_submit_review",
        class: "flex-1 bg-sky-600 hover:bg-sky-700 text-white font-semibold py-2 px-4 rounded-lg shadow-md hover:shadow-lg transition" %>
  </div>
<% end %>
